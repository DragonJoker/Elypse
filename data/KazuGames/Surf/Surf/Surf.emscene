ambient_light 1.0 1.0 1.0 1.0

// SOUNDS

sound Ambiance
{
	url ./Sons/Ambiance.mp3
	type music
	global true
	attenuation 0.0
	looped true
}

// SCENE NODES

scene_node SurfNode
{
	position 0.0 350.0 0.0
}

scene_node CameraNode
{
	parent SurfNode
}

scene_node SkyNode
{
	position 0.0 0.0 0.0
	scale 3 3 3
}

scene_node SeaNode
{
	scale 5 5 5
}

// OBJECTS

object Surf
{
	mesh surf.mesh
	attach_to SurfNode
}

object Character
{
	mesh corps.mesh
	attach_to SurfNode
}

object OeilD
