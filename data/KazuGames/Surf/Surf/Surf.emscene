}

object Wave
{
	mesh vague.mesh
	attach_to SurfNode
}

object Plage
{
	mesh plage.mesh
	attach_to SeaNode
}

object Sky
{
	mesh ciel.mesh
	attach_to SkyNode
}

// LIGHTS

light light_01
{
	type directional
	direction -0.50 -0.71 -0.50
	diffuse 0.90 0.90 0.90 1.00
	specular 0.70 0.70 0.70 1.00
}

