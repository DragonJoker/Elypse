Overlay_SetAction("IconeInfo4")
{
	if( info_current_zone != 4 )
	{
		if(!no_move_net)
		{
			Overlay_Show("InfoZone");
			OverlayElement_GetByName("InfoZone")->SetMaterial("Menu/Boutons/InfoPc1");
			info_current_zone = 4;
			if(!net_out)
			{
				no_move_net = true;
				Entity_GetByName("cable_rj45")->Show();
				timer("net_move",TIMERTYPE_CONTINUOUS, 1.0)
				{
					SceneNode_GetByName("cable_rj45")->SetPosition(V3_SinusInterpolation(vector3(100.0,0.0,0.0),vector3(0.0,0.0,0.0),CURRENTTIMER_TIME_LEFT));
				};
				timer("net_moved",TIMERTYPE_ONCE,1.0)
				{
					no_move_net = false;
					net_out = true;
				};
			};
		};
	}
	else
	{
		if(!no_move_net)
		{
			Overlay_Hide("InfoZone");
			info_current_zone = 0;
			no_move_net = true;
			if(net_out)
			{
			timer("net_move",TIMERTYPE_CONTINUOUS, 1.0)
			{
				SceneNode_GetByName("cable_rj45")->SetPosition(V3_SinusInterpolation(vector3(0.0,0.0,0.0),vector3(100.0,0.0,0.0),CURRENTTIMER_TIME_LEFT));
			};
			timer("net_moved",TIMERTYPE_ONCE,1.0)
			{
				no_move_net = false;
				Object_GetByName("cable_rj45")->Hide();
				net_out = false;
			};
			};
		};
	};
};

