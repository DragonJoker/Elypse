object Imm01
{
	mesh immeuble.mesh
	attach_to Immeuble01
}

object Imm02
{
	mesh immeuble.mesh
	attach_to Immeuble02
}

object SkyDome
{
	mesh urbain_dome.mesh
	attach_to SkyDomeNode
}

object Sol
{
	mesh urbain_sol.mesh
	attach_to SolNode
	use_physics SolPhys
	{
		bounding_box 10000.0 100.0 10000.0
		{
			translate 0.0 -50.0 0.0
		}
		ignore_gravity
		static
	}
}

object Balle
{
	mesh balle.mesh
	attach_to BalleNode
	use_physics BallePhys
	{
		bounding_sphere 5.0
	}
}

object Batte
{
	mesh batte.mesh
	attach_to BatteNode
	use_physics BattePhys
	{
		bounding_mesh boite_de_col_batte.mesh
		ignore_gravity
		static
	}
}

