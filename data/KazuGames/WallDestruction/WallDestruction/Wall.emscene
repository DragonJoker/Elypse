// SOUNDS

sound Woosh
{
	url ./Sons/Woosh.mp3
	type sfx
	global true
}

sound Clong
{
	url ./Sons/Clong.mp3
	type sfx
	global false
}

sound Brique
{
	url ./Sons/Brique.mp3
	type sfx
	global true
}

sound Brique2
{
	url ./Sons/Brique.mp3
	type sfx
	global true
}

sound Ambiance
{
	url ./Sons/Ambiance.mp3
	type music
	global true
	attenuation 0.0
	looped true
}

// SCENE_NODES

scene_node CameraNode
{
}

scene_node SolNode
{
}

scene_node Immeuble01
{
	position -3000.0 0.0 -7000.0
}

scene_node Immeuble02
{
	position 3500.0 0.0 -8000.0
}

scene_node SkyDomeNode
{
	position 0.0 13500.0 0.0
}

scene_node BalleNode
{
	position -350.0 50.0 0.0
	scale 1.5 1.5 1.5
	use_sound Clong
	{
	}
}

scene_node BatteNode
{
	position 0.0 100.0 600.0
}

scene_node WallNode
{
}

// PHYSICS

physics_simulation Main
{
	gravity 0.0 -80.0 0.0
	steptime 0.01
	steptime_limit 0.05
	timescale 1.5
	default_damping 0.05 0.9
	default_auto_disable 0.5 0.1 0.1
	cfm 0.01
	erp 0.99
}

physics BallePhys
{
	bouncyness 0.5
	friction 1.0
}

physics SolPhys
{
	bouncyness 0.5
	friction 1.0
}

physics BattePhys
{
	bouncyness 1.0
	friction 0.0
}

physics BriquePhys
{
	bouncyness 0.0
	friction 1.0
}

