	{
		Overlay_Show("InfoZone");
		OverlayElement_GetByName("InfoZone")->SetMaterial("Menu/Boutons/InfoDsl");
		info_current_zone = 1;
	}
	else
	{
		Overlay_Hide("InfoZone");
		info_current_zone = 0;
	};
};

Overlay_SetAction("IconeInfo2")
{
	if( info_current_zone != 2 )
	{
		Overlay_Show("InfoZone");
		OverlayElement_GetByName("InfoZone")->SetMaterial("Menu/Boutons/InfoPwr");
		info_current_zone = 2;
		
		if(!no_move)
		{
			if(!allumed)
			{
				no_move = true;
				allumed = true;
				Entity_GetByName("cable_alim")->Show();
				timer("allumation",TIMERTYPE_CONTINUOUS, 1.0)
				{
					SceneNode_GetByName("cable_alim")->SetPosition(V3_SinusInterpolation(vector3(100.0,0.0,0.0),vector3(0.0,0.0,0.0),CURRENTTIMER_TIME_LEFT));
				};
				timer("allumed",TIMERTYPE_ONCE,1.0)
				{
					Entity_GetByName("9box")->SetSubMaterial(8,"9box/plastique_noir_9");
					Entity_GetByName("9box")->SetSubMaterial(2,"9box/bouton_power");
					no_move = false;
				};
			};
		};
	}
	else
	{
		Overlay_Hide("InfoZone");
		info_current_zone = 0;
		
		if(!no_move)
		{
			if(allumed)
			{
				no_move = true;
				timer("allumation",TIMERTYPE_CONTINUOUS, 1.0)
				{
					SceneNode_GetByName("cable_alim")->SetPosition(V3_SinusInterpolation(vector3(0.0,0.0,0.0),vector3(100.0,0.0,0.0),CURRENTTIMER_TIME_LEFT));
				};
				Entity_GetByName("9box")->SetSubMaterial(8,"9box/plastique_noir_seul");
				Entity_GetByName("9box")->SetSubMaterial(2,"9box/bouton_power_OFF");
				timer("allumed",TIMERTYPE_ONCE,1.0)
				{
					no_move = false;
					Entity_GetByName("cable_alim")->Hide();
				};
				allumed = false;
			};
		};
	};
};

